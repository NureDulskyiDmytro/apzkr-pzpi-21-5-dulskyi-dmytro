<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:id="@+id/cardID"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:padding="10dp"
        android:background="@drawable/gradient">

        <LinearLayout
            android:id="@+id/linearId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/totalSum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/total_amount_100_000"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:padding="5dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearId"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/textProductSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/item_size_xl"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:padding="5dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearSize"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textProductCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/total_count_100"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:padding="5dp">
            </TextView>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>